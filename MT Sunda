-- âš¡ Auto Summit by Ganesha Exploit (Safe Godmode Fix)
-- âœ… Teleport Loop + UI Modern
-- âœ… Delay teleport 0.50 detik
-- âœ… Auto lanjut saat respawn
-- âœ… Godmode aman (tidak bisa mati)
-- âœ… Notifikasi asli Roblox

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local StarterGui = game:GetService("StarterGui")
local UIS = game:GetService("UserInputService")

local char = player.Character or player.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")
local humanoid = char:WaitForChild("Humanoid")

-- Daftar koordinat target
local COORDS = {
    Vector3.new(-93.45, 14.41, 20.02),
    Vector3.new(-684.14, 15.41, 633.19),
    Vector3.new(-342.79, 183.41, 658.41),
    Vector3.new(22.92, 171.99, 894.17),
    Vector3.new(639.58, 180.52, 920.45),
    Vector3.new(605.64, 45.54, 782.98),
    Vector3.new(766.53, 173.93, 619.53),
    Vector3.new(747.05, 147.38, 514.15),
    Vector3.new(529.22, 111.41, 476.17),
    Vector3.new(10.47, 315.41, 486.55),
    Vector3.new(-3.60, 155.41, 303.23),
    Vector3.new(368.78, 231.41, 167.65),
    Vector3.new(563.74, 523.38, 49.04),
    Vector3.new(-83.00, 14.41, 16.74),
}

-- Variabel utama
local running = false
local currentIndex = 1
local loopThread

-- Fungsi Notifikasi Roblox
local function Notify(msg, dur)
    pcall(function()
        StarterGui:SetCore("SendNotification", {
            Title = "âš¡ Auto Summit by Ganesha Exploit",
            Text = msg,
            Duration = dur or 2
        })
    end)
end

-- Godmode aman (tanpa hapus humanoid)
local function EnableGodmode(hum)
    if not hum then return end
    -- Loop paksa darah penuh
    task.spawn(function()
        while hum and hum.Parent do
            if hum.Health < hum.MaxHealth then
                hum.Health = hum.MaxHealth
            end
            task.wait(0.2)
        end
    end)

    -- Auto respawn kalau bener2 mati
    hum.Died:Connect(function()
        task.wait(0.5)
        player:LoadCharacter()
    end)

    Notify("ðŸ›¡ï¸ Godmode Aktif", 2)
end
EnableGodmode(humanoid)

-- Teleport dengan delay aman
local function BrutalTeleport(pos)
    if hrp and hrp.Parent then
        hrp.CFrame = CFrame.new(pos + Vector3.new(0, 3, 0))
    end
    task.wait(0.50)
end

-- Loop teleport
local function StartTeleport()
    if loopThread then return end
    running = true
    loopThread = task.spawn(function()
        while running do
            for i = currentIndex, #COORDS do
                if not running then break end
                currentIndex = i
                BrutalTeleport(COORDS[i])
                Notify("Checkpoint "..i.." âœ…", 1)
            end
            if running then
                Notify("ðŸ” Ulang dari awal...", 2)
                currentIndex = 1
            end
        end
        loopThread = nil
        Notify("â›” Teleport dihentikan", 2)
    end)
end

-- Auto lanjut saat respawn
player.CharacterAdded:Connect(function(newChar)
    char = newChar
    hrp = newChar:WaitForChild("HumanoidRootPart")
    humanoid = newChar:WaitForChild("Humanoid")
    EnableGodmode(humanoid)
    if running then
        task.wait(1)
        Notify("Respawn! Lanjut checkpoint "..currentIndex, 3)
        StartTeleport()
    end
end)

--===== UI Modern =====--
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "BrutalTeleportUI"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 200, 0, 80)
frame.Position = UDim2.new(0.05, 0, 0.3, 0)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 25)
title.BackgroundTransparency = 1
title.Text = "âš¡ Brutal Teleport"
title.TextColor3 = Color3.new(1,1,1)
title.Font = Enum.Font.GothamBold
title.TextScaled = true

local button = Instance.new("TextButton", frame)
button.Size = UDim2.new(0.9, 0, 0, 35)
button.Position = UDim2.new(0.05, 0, 0.45, 0)
button.BackgroundColor3 = Color3.fromRGB(50, 150, 250)
button.Text = "â–¶ START"
button.TextColor3 = Color3.new(1,1,1)
button.Font = Enum.Font.GothamBold
button.TextScaled = true
Instance.new("UICorner", button).CornerRadius = UDim.new(0, 10)

-- Dragging UI
local dragging, dragInput, dragStart, startPos
frame.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		dragStart = input.Position
		startPos = frame.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)
frame.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement then
		dragInput = input
	end
end)
UIS.InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		local delta = input.Position - dragStart
		frame.Position = UDim2.new(
			startPos.X.Scale, startPos.X.Offset + delta.X,
			startPos.Y.Scale, startPos.Y.Offset + delta.Y
		)
	end
end)

-- Tombol Toggle
button.MouseButton1Click:Connect(function()
    if not running then
        button.Text = "â¸ STOP"
        button.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
        StartTeleport()
    else
        running = false
        button.Text = "â–¶ START"
        button.BackgroundColor3 = Color3.fromRGB(50, 150, 250)
    end
end)

-- Notifikasi awal
Notify("Script Aktif & Stabil âœ…", 3)
